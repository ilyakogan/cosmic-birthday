<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_my_birthday"
            android:id="@+id/add_my_birthday"
            android:layout_margin="2pt"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_friends"
            android:id="@+id/edit_friends"
            android:layout_margin="2pt"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_gravity="center_horizontal" android:divider="#33cccccc"
            android:dividerHeight="3dp"/>
</LinearLayout>